<main>
    <h1 class="text-center">Courses</h1>

    <div class="row">
        <div class="col leftInfo">
            <a href="/create-course"><button type="button" class="btn btn-primary btn-lg">Create Course</button></a>
        </div>

        <form class="search rightInfo">
            <label>Search: </label>
            <input type="text">
            <input class="btn btn-primary btn-lg" type="submit" value="Search">
        </form>
    </div>

    <div class="container mt-3">
        <div class="row ">
            <div class="card-deck d-flex justify-content-center">

                {{#each courses}}
                <div class="card mb-4">
                    <img class="card-img-top"
                        src={{imageUrl}}
                        alt="Card image cap" width="400">
                    <div class="card-body">
                        <h4 class="card-title">{{this.title}}</h4>
                        <p class="card-text">{{description}}</p>
                    </div>
                    <div class="card-footer">
                        <a href="/course/{{_id}}"><button type="button" class="btn btn-info">Details</button></a>
                    </div>
                </div>
                {{else}}
                <h2  class="text-center">No courses...</h2>
                {{/each}}

            </div>
        </div>
    </div>

</main>